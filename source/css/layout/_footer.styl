footer
  margin: 8rem 0 1rem
  color: #888
  text-align: center
  :not(#background)
    animation: main 1s

  #background
    position: absolute
    bottom: 2rem
    height: 10rem
    width: 100%
    z-index: -1

    figure
      position: absolute
      height: 100%
      width: 100%
      margin: 0
      &:first-child
        background: url(https://cdn.jsdelivr.net/gh/BNDong/Cnblogs-Theme-SimpleMemory@master/img/webp/background.webp) repeat-x 0 0/225em 20em
      &:last-child
        background: url(https://cdn.jsdelivr.net/gh/BNDong/Cnblogs-Theme-SimpleMemory@master/img/webp/foreground.webp) repeat-x 0 0/225em 15em

  a
    color: inherit
    text-decoration: none
    cursor: pointer
    &:hover
      color: $light-blue
