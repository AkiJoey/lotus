.card-item
  width: 700px
  height: 280px
  margin: 20px auto
  background: #fff
  border-radius: 8px
	transition: all 0.3s
  overflow: hidden
  box-shadow: 0 4px 8px 6px rgba(7,17,27,0.06);
  &:hover
    box-shadow: 0 4px 12px 12px rgba(7,17,27,0.15)

  .card-img
    width: 45%
    height: 280px
    overflow: hidden
    transition: all 0.6s
    img
      border: 0
      transition: all .6s
      display: block
      width: 100%
      height: 100%
      padding: 0
      margin: 0
      object-fit: cover
      &:hover
        transform:scale(1.1)

  .card-left
    float: left
  .card-right
    float: right

  .card-info
    padding: 50px 40px
    display: inline-block
    width: 55%
    overflow: hidden